{% comment %}
  This code is used for affiliate function to Amazon, Walmart
  Willion
{% endcomment %}
<style>
  .w__amazonButton {
    display: flex;align-items: center;justify-content: center;padding:12px 10px;background:#dcdcdc;font-weight:600
  }
  .w__amazonButton:hover,
  .w__amazonButton:focus {
    background:#aaa
  }
  .w__buyAmazon {
    min-height: 50px;
    cursor: pointer;
    margin-top: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: transparent;
  }
  .w__buyPlatformSvg {
    width: 32px;
    height: 32px;
    fill: var(--btn-background);
    color: var(--btn-background);
    border: 1px solid;
    padding: 5px;
    border-radius: 50%;
  }
</style>
{% assign amazon_link = '' %}
{% if product.metafields.meta.enable_external_links %}
  
  {% case localization.country.iso_code %}
    {% when 'US' %}
      {% assign amazon_link = product.metafields.meta.amazon_link %}
    {% when 'CA' %}
      {% assign amazon_link = product.metafields.meta.amazon_link_ca %}
    {% when 'AU' %}
      {% assign amazon_link = product.metafields.meta.amazon_link_au %}
    {% when 'GB' %}
      {% assign amazon_link = product.metafields.meta.amazon_link_uk %}
    {% when 'DE' %}
      {% assign amazon_link = product.metafields.meta.amazon_link_de %}
    {% when 'FR' %}
      {% assign amazon_link = product.metafields.meta.amazon_link_fr %}
    {% when 'ES' %}
      {% assign amazon_link = product.metafields.meta.amazon_link_es %}
    {% when 'JP' %}
      {% assign amazon_link = product.metafields.meta.amazon_link_jp %}
    {% when 'AE' %}
      {% assign amazon_link = product.metafields.meta.amazon_link_ae %}
    {% when 'IT' %}
      {% assign amazon_link = product.metafields.meta.amazon_link_it %}
  {% endcase %}
      
  {% if amazon_link != blank %}
  <div class="w__buyExtend dn"></div>
  <a href="{{ amazon_link }}" style="" class=" w__buyAmazon no-underline gap-10 skeleton-loading" rel="nofollow">
    <svg class="w__buyPlatformSvg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M257.2 162.7c-48.7 1.8-169.5 15.5-169.5 117.5 0 109.5 138.3 114 183.5 43.2 6.5 10.2 35.4 37.5 45.3 46.8l56.8-56S341 288.9 341 261.4V114.3C341 89 316.5 32 228.7 32 140.7 32 94 87 94 136.3l73.5 6.8c16.3-49.5 54.2-49.5 54.2-49.5 40.7-.1 35.5 29.8 35.5 69.1zm0 86.8c0 80-84.2 68-84.2 17.2 0-47.2 50.5-56.7 84.2-57.8v40.6zm136 163.5c-7.7 10-70 67-174.5 67S34.2 408.5 9.7 379c-6.8-7.7 1-11.3 5.5-8.3C88.5 415.2 203 488.5 387.7 401c7.5-3.7 13.3 2 5.5 12zm39.8 2.2c-6.5 15.8-16 26.8-21.2 31-5.5 4.5-9.5 2.7-6.5-3.8s19.3-46.5 12.7-55c-6.5-8.3-37-4.3-48-3.2-10.8 1-13 2-14-.3-2.3-5.7 21.7-15.5 37.5-17.5 15.7-1.8 41-.8 46 5.7 3.7 5.1 0 27.1-6.5 43.1z"/></svg>
    <span class="btn-link lh-small w__buyPlatformTxt">{{ 'products.product.amazon_link' | t }}</span>
  </a>
  {% endif %}
  {% if product.metafields.meta.walmart_link != blank and localization.country.iso_code == 'US' and false %}
  <a href="{{ product.metafields.meta.walmart_link }}" style="display: flex;align-items: center;justify-content: center;" class="btn-outline w__buyAmazon skeleton-loading">
    <svg class="w__buyPlatformSvg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><path d="M253.3 35.1c6.1-11.8 1.5-26.3-10.2-32.4s-26.3-1.5-32.4 10.2L117.6 192H32c-17.7 0-32 14.3-32 32s14.3 32 32 32L83.9 463.5C91 492 116.6 512 146 512H430c29.4 0 55-20 62.1-48.5L544 256c17.7 0 32-14.3 32-32s-14.3-32-32-32H458.4L365.3 12.9C359.2 1.2 344.7-3.4 332.9 2.7s-16.3 20.6-10.2 32.4L404.3 192H171.7L253.3 35.1zM192 304v96c0 8.8-7.2 16-16 16s-16-7.2-16-16V304c0-8.8 7.2-16 16-16s16 7.2 16 16zm96-16c8.8 0 16 7.2 16 16v96c0 8.8-7.2 16-16 16s-16-7.2-16-16V304c0-8.8 7.2-16 16-16zm128 16v96c0 8.8-7.2 16-16 16s-16-7.2-16-16V304c0-8.8 7.2-16 16-16s16 7.2 16 16z"/></svg>
    <span class="btn-link lh-small w__buyPlatformTxt">{{ 'products.product.walmart_link' | t }}</span>
  </a>
  {% endif %}
{% endif %}