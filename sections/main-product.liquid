{{ 'main-product.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign theme_st = settings
  assign section_st = section.settings
-%}
{% case section.settings.section_style %}
  {% when 'audience1' %}
    {% render 'main-product-style-1' theme_st:theme_st, section_st:section_st %}
  {% when 'audience2' %}
    {% render 'main-product-style-2' theme_st:theme_st, section_st:section_st %}
  {% when 'audience3' %}
    {% render 'main-product-style-3' theme_st:theme_st, section_st:section_st %}
  {% when 'audience4' %}
    {% render 'main-product-style-4' theme_st:theme_st, section_st:section_st %}
  {% when 'audience5' %}
    {% render 'main-product-style-5' theme_st:theme_st, section_st:section_st %}
  {% when 'audience6' %}
    {% render 'main-product-style-6' theme_st:theme_st, section_st:section_st %}
{% endcase %}
